 @using TraversalCoreProject.Areas.Member.Models
 @model UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div class="container-fluid">
    <div class="page-header min-height-300 border-radius-xl mt-4" style="background-image: url('/Member/assets/img/curved-images/curved0.jpg'); background-position-y: 50%;">
        <span class="mask bg-gradient-primary opacity-6"></span>
    </div>
    <div class="card card-body blur shadow-blur mx-4 mt-n6 overflow-hidden">
        <div class="row gx-4">
            <div class="col-auto">
                <div class="avatar avatar-xl position-relative">
                    <img src="/Member/assets/img/bruce-mars.jpg" alt="profile_image" class="w-100 border-radius-lg shadow-sm">
                </div>
            </div>
            <div class="col-auto my-auto">
                <div class="h-100">
                    <h5 class="mb-1">
                        @Model.name @Model.surName
                    </h5>
                    <p class="mb-0 font-weight-bold text-sm">
                        Developer / FullStack Developer
                    </p>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12 col-xl-8">
            <form method="post">
                <div class="card h-100">
                    <div class="card-header pb-0 p-3">
                        <div class="row">
                            <div class="col-md-8 d-flex align-items-center">
                                <h6 class="mb-0">Profile Information</h6>
                            </div>
                            <div class="col-md-4 text-end">
                                <a href="javascript:;">
                                    <i class="fas fa-user-edit text-secondary text-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit Profile"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-3">

                        @Html.Label("Name")
                        <input type="text" class="form-control" name="name" value="@Model.name" />
                        <br />
                        @Html.Label("SurName")
                        <input type="text" class="form-control" name="surName" value="@Model.surName" />
                        <br />
                        @Html.Label("Phone Number")
                        <input type="text" class="form-control" name="phoneNumber" value="@Model.phoneNumber" />
                        <br />

                        @Html.Label("Email")
                        <input type="text" name="mail" value="@Model.mail" class="form-control" />
                        <br />

                        @Html.Label("Password")
                        <input type="text" name="password" value="@Model.password" class="form-control" />
                        <br />
                        @Html.Label("Comfirm Password")
                        <input type="text"  name="comfirmPassword" value="@Model.comfirmPassword" class="form-control" />
                        <br />
                    </div>
                </div>
            </form>
        </div>

    </div>

</div>

